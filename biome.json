{
	"$schema": "https://biomejs.dev/schemas/2.3.11/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"ignoreUnknown": false
	},
	"css": {
		"parser": {
			"allowWrongLineComments": true,
			"cssModules": true,
			"tailwindDirectives": true
		}
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noExplicitAny": "error",
				"noConsole": {
					"level": "warn",
					"options": {
						"allow": ["warn", "error", "log", "info"]
					}
				}
			},
			"correctness": {
				"useExhaustiveDependencies": "error"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		},
		"globals": ["console", "window", "document"]
	},
	"overrides": [
		{
			"includes": ["**/*.test.ts", "**/*.test.tsx", "**/*.spec.ts", "**/*.spec.tsx"],
			"linter": {
				"rules": {
					"suspicious": {
						"noExplicitAny": "off"
					}
				}
			}
		},
		{
			"includes": ["**/*.stories.tsx", "**/*.stories.ts", ".storybook/**"],
			"linter": {
				"rules": {
					"a11y": {
						"noRedundantAlt": "off",
						"useValidAnchor": "off",
						"useFocusableInteractive": "off",
						"useSemanticElements": "off",
						"noLabelWithoutControl": "off"
					},
					"suspicious": {
						"noArrayIndexKey": "off",
						"noShadowRestrictedNames": "off"
					}
				}
			}
		},
		{
			"includes": ["**/*.css"],
			"linter": {
				"rules": {
					"suspicious": {
						"noUnknownAtRules": "off"
					}
				}
			}
		},
		{
			"includes": ["**/model-detail-pane/ModelDetailPane.tsx"],
			"linter": {
				"rules": {
					"a11y": {
						"noStaticElementInteractions": "off"
					}
				}
			}
		},
		{
			"includes": ["**/header/Header.tsx"],
			"linter": {
				"rules": {
					"security": {
						"noDangerouslySetInnerHtml": "off"
					}
				}
			}
		},
		{
			"includes": ["**/sidebar.tsx"],
			"linter": {
				"rules": {
					"suspicious": {
						"noDocumentCookie": "off"
					}
				}
			}
		},
		{
			"includes": ["**/ProjectPageBody.tsx", "**/ProjectsList.tsx", "**/TempFiles.tsx"],
			"linter": {
				"rules": {
					"suspicious": {
						"noArrayIndexKey": "off"
					}
				}
			}
		}
	],
	"assist": {
		"enabled": true,
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		}
	}
}
